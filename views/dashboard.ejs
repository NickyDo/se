<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Data</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet"
          href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>


    <style>
        html {
            padding: 50px;
        }

    </style>
</head>
<body>
<div class="container">
    <div class="page-header text-center">
        <h1>My Profile</h1>
        <a href="/logout" class="btn btn-danger btn-sm">Logout</a>
    </div>

    <div class="row">
        <div class="col-sm-12">
            <div class="well">
                <h3><span class="fa fa-user"></span> Welcome <%= user.username %></h3>

                <p>
                    <strong>id</strong> <%= user.id %> <br>
                    <strong>username</strong> <%= user.username %> <br>
                </p>
            </div>
        </div>

        <div class="col-sm-12">

            <form method="post" action="" id="the-form">
                <table cellpadding="11">
                    <tr>
                        <td style="color: black;" class="label">device</td>
                        <td>: <input type="text" name="device"></td>
                    </tr>
                    <tr>
                        <td style="color: black;" class="label">status</td>
                        <td>: <input type="text" name="status"></td>
                    </tr>
                    <tr>
                        <td style="color: black;" class="label">property</td>
                        <td>: <input type="text" name="property"></td>
                    </tr>
                    <tr>
                        <td class="label"></td>
                        <td>
                            &nbsp; <input type="button" value="Save" onClick="saveUser()">
                        </td>
                    </tr>
                </table>
            </form>
        </div>
        <div class="col-sm-12">
            <ul class="err-area"></ul>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
            <tr>
                <th>No</th>
                <th>device name</th>
                <th>analog</th>
                <th>property</th>
            </tr>
            </thead>
            <tbody>
            <% if(data.length){

            for(var i = 0;i < data.length;i++) { %>

            <tr>
                <td><%= (i + 1) %></td>
                <td><%= data[i].device %></td>
                <td><%= data[i].analog %></td>
                <td><%= data[i].prob %></td>
            </tr>
            <% }

            }else{ %>
                <tr>
                    <td colspan="5">No Data</td>
                </tr>
            <% } %>
            </tbody>
        </table>
    </div>

</div>
<script>

    function saveUser() {

        $.ajax({

            url: "/devices",
            type: "post",
            data: $("#the-form").serialize(),
            success: function (res) {

                window.location.reload();
                return false;
            },
            error: function (xhr, status, error) {

                console.log(xhr.responseText);
                var err = '';
                $.each(JSON.parse(xhr.responseText), function (i, item) {

                    err += '<li>' + item.msg + '</li>';
                });
                $(".err-area").html(err);
                return false;
            }

        });
    }

    function deleteUser(user_id) {

        $.ajax({
            url: "/api/user/" + user_id,
            type: 'DELETE',
            success: function (res) {

                window.location.reload();
                return false;
            },
            error: function (xhr, status, error) {

                console.log(xhr.responseText);
                alert("Error deleting");
                return false;
            }
        });
    }

</script>

</body>
</html>
